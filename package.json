{
    "name": "terminal-code-runner",
    "displayName": "Terminal Code Runner",
    "publisher": "zardoy",
    "version": "0.0.0-dev",
    "private": true,
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "properties": {
                "execMap": {
                    "type": "object",
                    "markdownDescription": "Set the executor by [language id](https://code.visualstudio.com/docs/languages/identifiers), support [VSCode Variables](https://code.visualstudio.com/docs/editor/variables-reference)",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {
                        "javascript": "node ${relativeFile}"
                    }
                },
                "executorMapByGlob": {
                    "type": "object",
                    "markdownDescription": "Set the executor by [globs](https://code.visualstudio.com/api/references/vscode-api#GlobPattern), support [VSCode Variables](https://code.visualstudio.com/docs/editor/variables-reference)",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {}
                },
                "defaultExec": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "terminalCwd": {
                    "type": "string",
                    "enum": [
                        "workspace",
                        "file"
                    ],
                    "default": "workspace"
                },
                "focusOnEditor": {
                    "type": "boolean",
                    "description": "Focus on editor whenever the file is run instead of terminal",
                    "default": false
                },
                "clearTerminal": {
                    "type": "boolean",
                    "default": false
                },
                "saveFile": {
                    "type": "string",
                    "enum": [
                        "disabled",
                        "onlyActive",
                        "all"
                    ],
                    "default": "onlyActive"
                },
                "differentTerminalsForEachFile": {
                    "type": "boolean",
                    "description": "Uses different terminals for each file",
                    "default": false
                }
            }
        },
        "commands": [
            {
                "command": "runFile",
                "title": "Run File",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "terminal-code-runner.runButton",
                    "group": "navigation@-1",
                    "command": "runFile"
                }
            ]
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": false,
            "description": "Running arbitrary code available only in trusted workspaces"
        },
        "virtualWorkspaces": {
            "supported": false,
            "description": "This extension requires access to the terminal"
        }
    },
    "scripts": {
        "start": "vscode-framework start",
        "build": "tsc && vscode-framework build",
        "lint": "eslint src/**"
    },
    "devDependencies": {
        "@types/node": "^17.0.5",
        "@types/vscode": "^1.63.1",
        "@zardoy/tsconfig": "^1.2.2",
        "eslint": "^8.6.0",
        "eslint-config-zardoy": "^0.2.4",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "vscode-framework": "^0.0.18"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160,
        "endOfLine": "auto"
    }
}
